<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
	android:background="@drawable/mainbackground">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:text="数据汇总"
			android:textSize="50dp"
			android:textColor="#000000"
			android:textStyle="bold"
			android:layout_marginBottom="150dp"
			android:layout_marginTop="50dp"
	/>
    <Button android:text="个人支出汇总图"
            android:id="@+id/btnOutP"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            android:textSize="20dp"
            android:textColor="#000000"
			android:background="#4A3B4040"
    />
    <Button android:text="个人收入汇总图"
            android:id="@+id/btnInP"
			android:layout_width="200dp"
			android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            android:textSize="20dp"
			android:textColor="#000000"
			android:background="#4A3B4040"
    />
    <Button android:text="家庭支出汇总图"
            android:id="@+id/btnFamilyOutP"
			android:layout_width="200dp"
			android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            android:textSize="20dp"
			android:textColor="#000000"
			android:background="#4A3B4040"
    />

    <Button android:text="家庭收入汇总图"
            android:id="@+id/btnFamilyInP"
			android:layout_width="200dp"
			android:layout_height="50dp"
            android:textSize="20dp"
			android:textColor="#000000"
			android:background="#4A3B4040"
    />
</LinearLayout>
